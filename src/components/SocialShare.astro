        </a>

        <!-- Copy Link -->
        <button 
          type="button"
          id="copy-button"
          class="flex flex-col items-center p-4 bg-white dark:bg-gray-700 rounded-lg hover:bg-gray-600 hover:text-white transition-all duration-200 text-center group shadow-sm hover:shadow-md"
          aria-label={labels.copy}
        >
          <svg class="w-6 h-6 mb-2 text-gray-600 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
