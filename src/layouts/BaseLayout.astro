---
const {
  title = 'InsideTheGame',
  description = 'Advanced football analysis platform',
  lang = 'en',
  alternates = ['en', 'it', 'es'],
} = Astro.props;

const siteUrl = Astro.site?.origin || 'http://localhost:4321';
---

<html lang={lang} class="min-h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="InsideTheGame" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Hreflang for SEO -->
    {alternates.map((l) => (
      <link rel="alternate" hreflang={l} href={`${siteUrl}/${l}/`} />
    ))}
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}/`} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Fonts -->
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <slot />
  </body>
</html>
