<script define:vars={{ url, labels }}>
  // Toggle social buttons visibility
  const shareToggle = document.getElementById('share-toggle');
  const socialButtons = document.getElementById('social-buttons');
  const closeShare = document.getElementById('close-share');
  
  function showSocialButtons() {
    socialButtons.classList.remove('hidden');
    socialButtons.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
  }
  
  function hideSocialButtons() {
    socialButtons.classList.add('hidden');
  }
  
  shareToggle.addEventListener('click', showSocialButtons);
  closeShare.addEventListener('click', hideSocialButtons);
  
  // Copy to clipboard functionality
  const copyButton = document.getElementById('copy-button');
  const copyText = document.getElementById('copy-text');
  
  copyButton.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(url);
      
      // Visual feedback
      copyText.textContent = labels.copied;
      copyButton.classList.add('bg-green-600', 'hover:bg-green-700');
      copyButton.classList.remove('hover:bg-gray-600');
      
      setTimeout(() => {
        copyText.textContent = labels.copy;
        copyButton.classList.remove('bg-green-600', 'hover:bg-green-700');
        copyButton.classList.add('hover:bg-gray-600');
      }, 2000);
    } catch (err) {
      // Fallback for older browsers
      const textArea = document.createElement('textarea');
      textArea.value = url;
      textArea.style.position = 'fixed';
      textArea.style.left = '-999999px';
      textArea.style.top = '-999999px';
      document.body.appendChild(textArea);
      textArea.focus();
      textArea.select();
      
      try {
        document.execCommand('copy');
        copyText.textContent = labels.copied;
        setTimeout(() => {
          copyText.textContent = labels.copy;
        }, 2000);
      } catch (err) {
        console.error('Copy failed', err);
      }
      
      document.body.removeChild(textArea);
    }
  });
</script>

<style>
  .animate-fadeIn {
    animation: fadeIn 0.3s ease-in-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .social-share {
    transition: all 0.3s ease;
  }
</style>
