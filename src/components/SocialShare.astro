---
export interface Props {
  title: string;
  description?: string;
  url: string;
  lang: string;
}

const { title, description, url, lang } = Astro.props;

// Encode for URL sharing
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description || '');
const encodedUrl = encodeURIComponent(url);

// Social media hashtags based on language
const getHashtags = (lang: string) => {
  const common = ['calcio', 'football', 'soccer', 'tactics', 'Catenaccio'];
  switch (lang) {
    case 'it': return [...common, 'analisi', 'tattica'].join(',');
    case 'es': return [...common, 'análisis', 'táctica'].join(',');
    default: return [...common, 'analysis', 'tactical'].join(',');
  }
};

const hashtags = getHashtags(lang);
const encodedHashtags = encodeURIComponent(hashtags);

// Social sharing URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}&hashtags=${encodedHashtags}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  whatsapp: `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`,
  telegram: `https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`
};

// Labels based on language
const getLabels = (lang: string) => {
  switch (lang) {
    case 'it':
      return {
        share: 'Condividi questo articolo',
        copy: 'Copia link',
        copied: 'Link copiato!',
        close: 'Chiudi'
      };
    case 'es':
      return {
        share: 'Comparte este artículo',
        copy: 'Copiar enlace',
        copied: '¡Enlace copiado!',
        close: 'Cerrar'
      };
    default:
      return {
        share: 'Share this article',
        copy: 'Copy link',
        copied: 'Link copied!',
        close: 'Close'
      };
  }
};

const labels = getLabels(lang);
---

